<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LFG</title>
    @Styles.Render(
        "~/Content/bootstrap-3.3.5/css/bootstrap.css",
        "~/Content/font-awesome-4.4.0/css/font-awesome.min.css",
        "~/Content/css"
    )
</head>

<body>
    <div id="nav">
        <nav class="navbar navbar-inverse">
